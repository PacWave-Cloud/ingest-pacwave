    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Current File",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "justMyCode": false,
            "console": "integratedTerminal"
        },
        {
            "name": "Debug Tests",
            "type": "python",
            "request": "launch",
            "purpose": [
                "debug-test"
            ],
            "program": "${file}",
            "justMyCode": false,
            "console": "integratedTerminal",
        },
        {
            "name": "Debug Floatr ADCP",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}//runner.py",
            "justMyCode": false,
            "console": "integratedTerminal",
            "args": [
                "ingest",
                "pipelines/floatr_adcp/test/data/input/PWS_001_ADCP.dat",
            ]
        },
        {
            "name": "Debug Floatr MET",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}//runner.py",
            "justMyCode": false,
            "console": "integratedTerminal",
            "args": [
                "ingest",
                "pipelines/floatr_met/test/data/input/CR1000x_PWS_002_IPconnect_Met.dat",
            ]
        },
        {
            "name": "Debug Spotter CSV",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}//runner.py",
            "justMyCode": false,
            "console": "integratedTerminal",
            "args": [
                "ingest",
                "pipelines/spotter/test/input/SPOT-30897C_2024-02-29_2024-03-02_download.csv",
            ]
        },
        {
            "name": "Debug VAP",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}//runner.py",
            "justMyCode": false,
            "console": "integratedTerminal",
            "args": [
                "vap",
                "pipelines/<pipeline_name>/config/pipeline.yaml",
                "--begin",
                "yyyymmdd.HHMMSS",
                "--end",
                "yyyymmdd.HHMMSS"
            ]
        },
    ]
}
